<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.martinez.winesoftheworld.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Welcome to the Wines of the World App! Choose an option to get started!"
            android:id="@+id/textView"
            android:paddingBottom="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Wines"
            android:id="@+id/button"
            android:onClick="searchWines" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore Wines"
            android:id="@+id/button2"
            android:singleLine="false"
            android:onClick="exploreWines" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Favorites"
            android:id="@+id/button3"
            android:textAlignment="center"
            android:onClick="seeFavorites" />

    </LinearLayout>

</RelativeLayout>
